{
  "name": "svelte5-auth-basic",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "prisma generate --schema=./prisma/schema.production.prisma && vite build",
    "build:local": "prisma generate && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "db:push": "prisma db push",
    "db:push:prod": "dotenv -e .env.local -- prisma db push --schema=./prisma/schema.production.prisma",
    "db:reset:prod": "dotenv -e .env.local -- prisma db push --schema=./prisma/schema.production.prisma --force-reset",
    "db:studio:prod": "dotenv -e .env.local -- prisma studio --schema=./prisma/schema.production.prisma",
    "deploy:prod": "npm run db:push:prod && git push origin main",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate --schema=./prisma/schema.production.prisma || prisma generate"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/adapter-vercel": "^5.10.2",
    "@sveltejs/kit": "^2.37.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.3.1",
    "dotenv-cli": "^10.0.0",
    "prisma": "^6.15.0",
    "svelte": "^5.38.7",
    "svelte-check": "^4.3.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "marked": "^16.2.1"
  }
}
